@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">LinkShopHub</MudText>

        <MudNavLink Href="/billing" Icon="@Icons.Material.Filled.CreditCard">Billing</MudNavLink>
        <MudNavLink Href="/design" Icon="@Icons.Material.Filled.Palette">Design</MudNavLink>
        <MudNavLink Href="/admin" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin</MudNavLink>
    </MudAppBar>

    <MudMainContent Class="d-flex flex-column" Style="min-height: 100vh;">
        <MudContainer MaxWidth="MaxWidth.Large" Class="flex-grow-1 py-4">
            @Body
        </MudContainer>
        <MudPaper Class="d-flex justify-center">
            <Footer />
        </MudPaper>
    </MudMainContent>
</MudLayout>